<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title><%= productName %></title>
    <style>
        .centerContent{
            display: flex;
            align-items: center;
            flex-direction: column;
        }
        #update{
            color: red;
        }
    </style>
</head>
<body>
<!-- Navigation Header-->
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">G00296371</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="index.html">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/shop">Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="checkout.html">Checkout</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="gallery.html">Gallery</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Contact
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="contactForm.html">Contact Us</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="servicesContact.html">Services</a></li>
                        </ul>
                    </li>

                </ul>
                <form class="d-flex" action="/product" method="get">
                    <input class="form-control me-2" placeholder="Search" aria-label="Search" type="text" id="id" name="id" value="1">
                    <button class="btn btn-secondary" type="submit">Product Search</button>
                </form>
            </div>
        </div>
    </nav>
</header>
<!-- Product information -->
<div class="container my-3">
    <div class="centerContent">
        <h2 id="product"><%= productName %></h2>
        <div><img src="images/<%= imageURL %>" alt="Product Image"></div>

        <p class="mt-1"><h4 class="mb-1">Description</h4><div id="description"><%= description %></div></p>
        <p class="mb-1"><h4 class="mb-1">Price</h4><div id="price"><%= price %></div></p>
        <div class="row my-1">
        <select class="form-select form-select-lg mb-3" id="quantity" name="quantity">
            <option value="0">0</option>
            <option value="1" selected>1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        </div>
        <button onclick="addToCart()" class="btn btn-lg btn-dark" type="submit">Add to Cart</button><br><h4 id="update"></h4>
        <div class="mx-3">
        <a href="checkout.html"><button class="btn btn-warning" type="submit">Checkout</button></a>
        <a href="/shop"><button class="btn" type="submit">Back to Shop</button></a>
        </div>
    </div>
</div>

<!-- Bootstrap Bundle with Popper -->
<script>
    function addToCart() {
        let product = document.getElementById("product").innerHTML;
        let quantity = document.getElementById("quantity").value;
        let price = document.getElementById("price").innerHTML;
        let price_quant = {p: price, q:quantity};

        document.getElementById("update").innerHTML = "Cart Updated with " + quantity + " " + product + "!";

        localStorage.setItem(product, JSON.stringify(price_quant));
        console.log("[INFO] " + quantity + " " + product + " added to cart.")
    }
</script>

</body>
</html>